{
  "name": "@vue-emap/monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.4.0",
  "author": "airaTaiwan <https://github.com/airaTaiwan456>",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "nr watch",
    "watch": "pnpm -r --parallel --filter=./packages/* run watch",
    "build": "rimraf packages/*/dist && nr -r --filter \"./packages/*\" build",
    "play": "run-s build play:run",
    "play:run": "run-p dev play:dev",
    "play:dev": "npm -C playground run dev",
    "play:build": "npm -C playground run build",
    "lint": "eslint .",
    "lint:fix": "nr lint --fix",
    "release": "bumpp package.json packages/**/package.json",
    "deploy": "nr build && nr play:build",
    "clean": "rimraf packages/*/dist",
    "postinstall": "npx simple-git-hooks",
    "major": "taze minor -wIr",
    "mono": "monoman && nr lint:fix",
    "mono:check": "monoman --check",
    "test": "vitest",
    "test:update": "vitest -u",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.21.3",
    "@antfu/ni": "^0.21.12",
    "@antfu/utils": "^0.7.10",
    "@types/node": "^20.14.10",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/ui": "^1.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/core": "^10.11.0",
    "bumpp": "^9.4.1",
    "eslint": "^8.57.0",
    "esno": "^4.7.0",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.7",
    "monoman": "^0.4.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.8",
    "simple-git-hooks": "^2.11.1",
    "taze": "^0.13.9",
    "tsup": "^8.1.0",
    "typescript": "5.4.2",
    "unocss": "^0.61.2",
    "vite": "^5.3.3",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^1.6.0",
    "vitest-canvas-mock": "^0.3.3",
    "vue": "^3.4.31",
    "vue-component-type-helpers": "^2.0.26",
    "vue-tsc": "^2.0.26"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
