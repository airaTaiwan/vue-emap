{
  "name": "@aira-taiwan/monorepo",
  "version": "0.0.1-beta.11",
  "private": true,
  "packageManager": "pnpm@9.7.1",
  "author": "airaTaiwan <https://github.com/airaTaiwan456>",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "nr watch",
    "watch": "pnpm -r --parallel --filter=./packages/* run watch",
    "build": "rimraf packages/*/dist && nr -r --filter \"./packages/*\" build",
    "play": "run-s build play:run",
    "play:run": "run-p dev play:dev",
    "play:dev": "npm -C playground run dev",
    "play:build": "npm -C playground run build",
    "lint": "eslint .",
    "lint:fix": "nr lint --fix",
    "release": "bumpp package.json packages/**/package.json && pnpm -r publish --access public --no-git-checks",
    "deploy": "nr build && nr play:build",
    "clean": "rimraf packages/*/dist",
    "postinstall": "npx simple-git-hooks",
    "major": "taze minor -wIr",
    "mono": "monoman && nr lint:fix",
    "mono:check": "monoman --check",
    "test": "vitest",
    "test:update": "vitest -u",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.25.2",
    "@antfu/ni": "^0.22.4",
    "@antfu/utils": "^0.7.10",
    "@types/node": "^22.3.0",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vitejs/plugin-vue-jsx": "^4.0.1",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/ui": "^2.0.5",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/core": "^11.0.0",
    "bumpp": "^9.5.1",
    "eslint": "^9.9.0",
    "esno": "^4.7.0",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.9",
    "monoman": "^0.4.3",
    "nanoid": "^5.0.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "taze": "^0.16.6",
    "tsup": "^8.2.4",
    "typescript": "5.4.2",
    "unocss": "^0.62.2",
    "vite": "^5.4.1",
    "vite-plugin-dts": "^4.0.3",
    "vitest": "^2.0.5",
    "vitest-canvas-mock": "^0.3.3",
    "vue": "^3.4.38",
    "vue-component-type-helpers": "^2.0.29",
    "vue-tsc": "^2.0.29"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
